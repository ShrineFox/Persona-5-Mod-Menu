void CallMenu()
{
    while (true && !PAD_CHK_PRESS(PadButton.L2))
    {
        int selection = DescriptionMenu(Title_Call, Options_Call);
        switch (selection)
        {
            case -1:
                return;
            case 0:
                // Battle/Battle.flow
                BattleMenu();
                break;
            case 1:
                // Fields/Fields.flow
                FieldMenu();
                break;
            case 2:
                // Events/Events.flow
                EventMenu();
                break;
            case 3:
                // Cutins/Cutins.flow
                CutinsMenu();
                break;
            case 4:
                // Font/Font.flow
                FontMenu();
                break;
            case 5:
                // Sound/Sound.flow
                SoundMenu();
                break;
            case 6:
                // Chats/Chats.flow
                ChatMenu();
                break;
            case 7:
                // Shops/Shops.flow
                ShopsMenu();
                break;
            case 8:
                // Timer
                SetTimer();
                break;  
            case 9:
                // Tutorial
                TutorialMenu();
                break;  
        }
    }
}

void SetTimer()
{
    int seconds = NumberMenu(5, Title_Seconds);
    if (seconds == -1)
        return;
    TIMER_SETUP();
    TIMER_SETUP_SYNC();
    TIMER_SET_TIME(seconds);
    TIMER_SET_VISIBLE(1);
    TIMER_SET_PAUSE(0);
}