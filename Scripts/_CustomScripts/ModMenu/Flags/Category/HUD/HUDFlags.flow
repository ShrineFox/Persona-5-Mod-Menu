import("HUDFlags.msg");

void HUDFlagsMenu()
{
    while (true && !PAD_CHK_PRESS(PadButton.L2))
    {
        int selection = DescriptionMenu(Title_HUDFlags, Options_HUDFlags);
        switch (selection)
        {
            case -1:
                return;
            case 0:
                ToggleHUD();
                break;
            case 1:
                InvertHUD();
                break;
        }
    }
}

void ToggleHUD()
{
    int hud = SystemMenu(Message_ToggleHUD, Options_ShowHide);
    if (hud) 
    {
        // Turn Off HUD
        DATE_DISP(0);
        FLD_PANEL_DISP(0);
    }
    else
    {
        // Turn On HUD
        DATE_DISP(1);
        FLD_PANEL_DISP(1);
    }
}

void InvertHUD()
{
    int invert = SystemMenu(Message_InvertHUD, Options_OnOff);
    if (invert)
    {
        BIT_ON(Flag.Section4 + 39);
    }
    else
    {
        BIT_OFF(Flag.Section4 + 39);
    }
}