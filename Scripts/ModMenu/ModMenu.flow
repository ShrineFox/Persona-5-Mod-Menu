// Procedures
void ModMenuDisplay()
{
    DetectController();
    PrintPosition();
    SetFlagAmt();
    EnableSharePlay();
    //PrintOnFlags();
    //PrintCount();

    // Skip to Teleport function if Confirm button is held
    if (controller)
    {
        teleSkip = PAD_CHK_PRESS(PadButton.Cross);
        if (teleSkip)
        {
            TransformModel(FLD_PC_GET_RESHND(0));
            return;
        }
    }

    while (true && !PAD_CHK_PRESS(PadButton.L2))
    {
        int selection = DescriptionMenu(Title_ModMenu, Options_ModMenu);
        switch (selection)
        {
            case -1:
                return;
            case 0:
                CallOriginalSquareMenu();
                break;
            case 1:
                // ModMenu/Player/Player.flow
                //PlayerMenu();
                LoadExternalScript(0420, 069, 004);
                break;
            case 2:
                // ModMenu/Teleport.flow
                if (controller)
                    TransformModel(FLD_PC_GET_RESHND(0));
                break;
            case 3:
                // ModMenu/Call/Call.flow
                LoadExternalScript(0420, 069, 000);
                //CallMenu();
                break;
            case 4:
                // ModMenu/Calendar/Calendar.flow
                //CalendarMenu();
                LoadExternalScript(0420, 069, 001);
                break;
            case 5:
                // ModMenu/Camera/Camera.flow
                //CameraMenu();
                LoadExternalScript(0420, 069, 002);
                break;
            case 6:
                // ModMenu/Flags/Flags.flow
                FlagsMenu();
                break;
            case 7:
                // ModMenu/Spawn/Spawn.flow
                //SpawnMenu();
                LoadExternalScript(0420, 069, 003);
                break;
            case 8:
                SystemMessage(Message_About);
                break;
            /* Royal Start */
            case 9:
                // ModMenu/Royal/Royal.flow
                RoyalMenu();
                break;
            /* Royal End */
        }
    }
}

void EnableSharePlay()
{
    ALL_ENABLE_SHARE_PLAY();
    BIT_OFF(Flag.Section5 + 42);
}

void SetFlagAmt()
{
    /* Vanilla Start */
    SET_COUNT(8, 8960);
    /* Vanilla End */
    /* Royal Start */
    SET_COUNT(8, 12800);
    /* Royal End */
}

void LoadExternalScript(int majorId, int minorId, int subId)
{
    int script = FLD_SCRIPT_READ(majorId, minorId, subId);
    FLD_SCRIPT_READ_SYNC(script);
    FLD_SCRIPT_EXEC(script, 0);
    FLD_SCRIPT_FREE(script);
}