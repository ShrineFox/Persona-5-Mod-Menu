void EventBattle()
{
    while (true)
    {
        switch (NameMenu(Title_EventBattles, Options_EventBattles))
        {
            case -1:
                return;
            case 0:
                CALL_EVENTBATTLE(422, 1, 779);
                break;
            case 1:
                CALL_EVENTBATTLE(422, 3, 781);
                break;
            case 2:
                CALL_EVENTBATTLE(448, 1, 786);
                break;
            case 3:
                CALL_EVENTBATTLE(459, 2, 785);
                break;
            case 4:
                CALL_EVENTBATTLE(500, 1, 790);
                break;
            case 5:
                CALL_EVENTBATTLE(131, 1, 647);
                break;
        }
    }

    WAIT_BATTLE();
    ReloadPreviousField();
}