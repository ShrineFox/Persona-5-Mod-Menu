import("Battle.msg");

void BattleMenu()
{
    int selection = DescriptionMenu(Title_Battle, Options_Battle);

    switch (selection)
    {
        case -1:
            return;
        case 0:
            RegularBattle();
            break;
        case 1:
            BossPalaceMenu();
            break;
        case 2:
            EventBattle();
            break;
    }
}

void RegularBattle()
{
    SystemMessage(Message_EncounterID);
    int id = NumberMenu(3);

    if (id == -1)
        return;

    CALL_BATTLE(id);
    WAIT_BATTLE();
    ReloadPreviousField();
}

